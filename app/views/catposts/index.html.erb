<div class="posts-wrapper row">
  <% @catposts.each do |post| %>
      <div class="post">
        <div class="post-head">
          <div class="name">
            Ben Waldman
          </div>
        </div>
        <div class="image center-block">
          <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), catpost_path(post) %>
          <p class="caption">
            <%= post.caption %>
          </p>
        </div>

      </div>
  <% end %>
</div>