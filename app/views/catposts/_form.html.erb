<div class="form-wrapper">
  <%= simple_form_for @catpost, html: { class: 'form-horizontal',
                                        multipart: true} do |form| %>
      <div class="form-group">
        <%= form.input :image %>
      </div>
      <div class="form-group text-center">
        <%= form.input :caption %>
      </div>
      <div class="form-group text-center">
        <%= form.button :submit, class: 'btn-success' %>
      </div>
  <% end %>
</div>